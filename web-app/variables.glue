# border colors : light : #ecf0f1 / dark : #d8d8d8

font = font + structure(
    color: structure(
        primary: "#777",
        accent: "#878787",
        secondary: "#00b289",
        tertiary: "#425662",
        accentTertiary: "#f2f2f2",
        disabled: "rgba(105, 129, 129, 0.4)"
    ),
    family: structure(
        primary: "'Montserrat', 'Open Sans', sans-serif",
        secondary: "'Montserrat', 'Open Sans', sans-serif",
        alt: "'Montserrat', 'Open Sans', sans-serif"
    ))

background = background + structure(
    color: structure(
        primary: "#fff",
        accent: "#F9F9F9",
        accentSecondary: "#fcfdfd",
        secondary: "#DFE9F0",
        tertiary: "#00B289",
        accentTertiary: "#01b98d",
        contrast: "#353736"
    ))


# BORDER

border = border + structure(
    color: "#d8d8d8",
    style: "solid",
    width: "1px",
    radius: "2px",
    soft: structure(
    	color: "#ecf0f1",
    	style: "solid",
    	width: "1px"
    ),
    dashed: structure(
        color: "#d9d9d9",
        style: "dashed",
        width: "1px"
    ))

border = border + structure(border,
    apply: lambda(border/style + " " + border/width + " " + border/color))
    

# LEVELS

levels = levels + structure(
	success: structure(
		dark: "#01b98d",
		light: "#fff"
	),
	info: structure(
		dark: "#4b8ae8",
		light: "#fff",
		darkAccent: "#295aa3"
	),
	error: structure(
		dark: "#E06666", 
		light: "#fff"
	))
	
